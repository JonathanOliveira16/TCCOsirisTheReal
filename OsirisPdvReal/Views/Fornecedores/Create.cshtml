@model OsirisPdvReal.Models.Fornecedor

@{
    ViewData["Title"] = "Create";
}

<div class="divBtn">
    <h4>Adicionar fornecedor</h4>
</div>
<hr />
@if (TempData["msgSucesso"] != null)
{
    <div class="alert alert-danger alert-dismissable mt-2" style="margin-left:10%;margin-right:10%">
        <strong>@TempData["msgSucesso"]</strong>
    </div>
}
<div class=" borderPurple divBtn centerCreateOrEdit">
    <div class="mt-3 mb-3">
        <div class="form-group">
            <label style="margin-right:38%" class="font-weight-bold">CNPJ</label>
            <br />
            <div>
                <input class="w-50 centerText borderInput form-control" style=" display: inline; margin-left: 8%;" name="tes" id="tes" />
                <button class="btn btn-success searchBtn cancel botaoDoId" type="button" onclick="Validar()" style="margin-left:1%;margin-bottom:1%;"><i class="fa fa-search text-white"></i></button>
            </div>
        </div>
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NomeFornecedor" style="margin-right:30%" class="font-weight-bold"></label>
                <input asp-for="NomeFornecedor" readonly="readonly" id="inp1" class="w-50 centerText borderInput form-control" />
                <span asp-validation-for="NomeFornecedor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EmailFornecedor" style="margin-right:30%" class="font-weight-bold"></label>
                <input asp-for="EmailFornecedor" readonly="readonly" id="inp2" class="w-50 centerText borderInput form-control" />
                <span asp-validation-for="EmailFornecedor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TelefoneFornecedor" style="margin-right:28%" class="font-weight-bold"></label>
                <input asp-for="TelefoneFornecedor" readonly="readonly" id="inp3" class="w-50 centerText borderInput form-control" />
                <span asp-validation-for="TelefoneFornecedor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PontoFocalFornecedor" style="margin-right:35%" class="font-weight-bold"></label>
                <input asp-for="PontoFocalFornecedor" readonly="readonly" id="inp4" class="w-50 centerText borderInput form-control" />
                <span asp-validation-for="PontoFocalFornecedor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LogradouroFornecedor" style="margin-right:35%" class="font-weight-bold"></label>
                <input asp-for="LogradouroFornecedor" readonly="readonly" id="inp5" class="w-50 centerText borderInput form-control" />
                <span asp-validation-for="LogradouroFornecedor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CEPFornecedor" style="margin-right:45%" class="font-weight-bold"></label>
                <input asp-for="CEPFornecedor" id="inp6" readonly="readonly" class="w-50 centerText borderInput form-control" />
                <span asp-validation-for="CEPFornecedor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StatusId" style="margin-right:38%" class="font-weight-bold"></label>
                <select asp-for="StatusId" disabled id="sel1" class="w-50 centerText borderInput form-control" asp-items="ViewBag.StatusId"></select>
            </div>
            <div class="divBtn flex-row">

                <input type="submit" value="Adicionar" class="btn btn-success btnSizeFontUpper" />


                <a class="btn btn-info btnSizeFontUpper" asp-action="Index">Voltar</a>

            </div>
        </form>
    </div>
</div>




@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        function Validar() {
            var cnpj = document.getElementById("tes").value
            console.log(cnpj)

            var data = { id: cnpj };
            $.ajax({
                url: "/Fornecedores/ValidateFornecedor",
                type: "post",
                contentType: 'application/x-www-form-urlencoded',
                data: data,
                success: function (result) {
                    console.log(result)
                    if (result == "ok") {
                        document.getElementById("sel1").disabled = false;
                        document.getElementById('inp1').removeAttribute('readonly');
                        document.getElementById('inp2').removeAttribute('readonly');
                        document.getElementById('inp3').removeAttribute('readonly');
                        document.getElementById('inp4').removeAttribute('readonly');
                        document.getElementById('inp5').removeAttribute('readonly');
                        document.getElementById('inp6').removeAttribute('readonly');
               
                    } else {
                        var data2 = { id: cnpj };
                        $.ajax({
                            url: "/Fornecedores/Edit",
                            type: "get",
                            contentType: 'application/x-www-form-urlencoded',
                            data: data2,
                            success: function () {
                                window.location.href = '/Fornecedores/Edit/' + cnpj;
                            }
                        });
                    }
                }
            });
            //$.ajax({
            //    url: "/Jornaleiros/ValidateCpf",
            //    method: "POST",
            //    data: { id: '15612118775' },
            //    success: function (data) {

            //    }
            //});

        }
    </script>
}

