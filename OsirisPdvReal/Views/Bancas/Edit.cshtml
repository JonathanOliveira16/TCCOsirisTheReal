@model OsirisPdvReal.Models.Banca

@{
    ViewData["Title"] = "Edit";
}

    <div class="modal" id="visao" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="titleModal">Excluir</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p>Deseja realmente excluir essa banca?</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-success botaoDoId" style="font-size:10px;">Sim</button>
                    <button type="button" class="btn btn-danger" style="font-size:10px;" data-dismiss="modal">Não</button>
                </div>
            </div>
        </div>
    </div>

<div class="divBtn">
    <h4>Editar Banca</h4>
</div>
<hr />
@if (TempData["msgSucesso"] != null)
{
    <div class="alert alert-danger alert-dismissable mt-2" style="margin-left:10%;margin-right:10%">
        <strong>@TempData["msgSucesso"]</strong>
    </div>
}
<div class=" borderPurple divBtn centerCreateOrEdit">
    <div class="mt-3 mb-3">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" id="valueId" asp-for="BancaId" />
            <div class="form-group">
                <label asp-for="NomeBanca" style="margin-right:43%" class="font-weight-bold"></label>
                <input asp-for="NomeBanca" class="w-50 centerText borderInput form-control" />
                <span asp-validation-for="NomeBanca" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label style="margin-right:43%" class="font-weight-bold">Jornaleiro</label>
                <select asp-for="CPF" class="w-50 centerText borderInput form-control" asp-items="ViewBag.CPF"></select>
                <span asp-validation-for="CPF" class="text-danger"></span>
            </div>
            <div class="divBtn flex-row">

                <input type="submit" value="salvar" class="btn btn-success btnSizeFontUpper" />


                <a class="btn btn-info btnSizeFontUpper" asp-action="Index">Voltar</a>
                <a class="btn btn-danger btnSizeFontUpper text-white" data-toggle="modal" data-target="#visao" onclick="PassarDados()">Excluir</a>

            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        function PassarDados() {
            var idJornaleiro = document.getElementById("valueId").value
            console.log(idJornaleiro)
            $(".botaoDoId").on('click', function () {
                $.ajax({
                    url: "/Bancas/Delete",
                    method: "POST",
                    data: { id: idJornaleiro },
                    success: function (data) {
                        $.ajax({
                            url: "/Bancas/Index",
                            type: "get",
                            success: function () {
                                window.location.href = '/Bancas/Index'

                            }
                        });
                    }
                });
            });
        }
    </script>
}
