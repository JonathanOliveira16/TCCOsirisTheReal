<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - OsirisPdvReal</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/pagination.css" />
    <link href="https://fonts.googleapis.com/css2?family=Balsamiq+Sans:wght@700&display=swap" rel="stylesheet">
</head>
<body>
    <header>

        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-custom border-bottom box-shadow mb-3">
            <div class="container">

                <a class="sizeLogo" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="@Url.Content("~/images/logo.png")" class="imageLogo mr-2" />
                </a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle fontSizeDezoito" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Vendas</a>
                            <div class="dropdown-menu">
                                <a class="dropdown-item" asp-controller="Vendas" asp-action="Create">Vender</a>
                                <a class="dropdown-item" asp-controller="Vendas" asp-action="Index">Listar vendas</a>
                            </div>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle fontSizeDezoito" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Status</a>
                            <div class="dropdown-menu">
                                <a class="dropdown-item" asp-controller="Status" asp-action="Index">Status</a>
                                <a class="dropdown-item" asp-controller="Status" asp-action="InativosJornaleiros">Ativar jornaleiro</a>
                                <a class="dropdown-item" asp-controller="Status" asp-action="InativosFornecedores">Ativar fornecedor</a>
                                <a class="dropdown-item" asp-controller="Status" asp-action="InativosClientes">Ativar cliente</a>
                            </div>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle fontSizeDezoito" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Produtos</a>
                            <div class="dropdown-menu">
                                <a class="dropdown-item" asp-controller="Produtos" asp-action="Index">Produtos</a>
                                <a class="dropdown-item" asp-controller="TipoProdutos" asp-action="Index">Tipo de produtos</a>
                            </div>
                        </li>
                        <li class="nav-item">
                        </li>
                        <li class="nav-item">
                            <a class="nav-link fontSizeDezoito" asp-area="" asp-controller="Jornaleiros" asp-action="Index">Jornaleiro</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link fontSizeDezoito" asp-area="" asp-controller="Fornecedores" asp-action="Index">Fornecedor</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link fontSizeDezoito" asp-area="" asp-controller="Compras" asp-action="Index">Compras</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link fontSizeDezoito" asp-area="" asp-controller="Clientes" asp-action="Index">Clientes</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link fontSizeDezoito" asp-area="" asp-controller="Bancas" asp-action="Index">Bancas</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle fontSizeDezoito" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Relatórios</a>
                            <div class="dropdown-menu">
                                <a class="dropdown-item" href="#">Action</a>
                                <a class="dropdown-item" href="#">Another action</a>
                                <a class="dropdown-item" href="#">Something else here</a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" href="#">Separated link</a>
                            </div>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link fontSizeDezoito" asp-area="" asp-controller="Jornaleiros" asp-action="Login">Sair</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.15/jquery.mask.min.js"></script>
    <script src="https://unpkg.com/imask"></script>
    <script src="~/js/pagination.js"></script>

    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>

