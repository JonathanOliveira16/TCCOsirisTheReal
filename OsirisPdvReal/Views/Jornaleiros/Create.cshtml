@model OsirisPdvReal.Models.Jornaleiro

@{
    ViewData["Title"] = "Create";
}

<div class="divBtn">
    <h4>Adicionar jornaleiro</h4>
</div>

<div class=" borderPurple divBtn centerCreateOrEdit" >
    <div class="mt-3 mb-3">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label style="margin-right:43%" class="font-weight-bold" asp-for="NomeJornaleiro"></label>
                <br />
                <input class="w-50 centerText borderInput form-control" asp-for="NomeJornaleiro" />
                <span asp-validation-for="NomeJornaleiro" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label style="margin-right:43%"  class="font-weight-bold" asp-for="EmailJornaleiro" ></label>
                <input class="w-50 centerText borderInput form-control" asp-for="EmailJornaleiro"  />
                <span asp-validation-for="EmailJornaleiro" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label style="margin-right:41%"  class="font-weight-bold" asp-for="TelefoneJornaleiro" ></label>
                <input class="w-50 centerText borderInput form-control" asp-for="TelefoneJornaleiro" />
                <span asp-validation-for="TelefoneJornaleiro" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label style="margin-right:43%"  class="font-weight-bold" asp-for="SenhaJornaleiro" ></label>
                <input class="w-50 centerText borderInput form-control" asp-for="SenhaJornaleiro" />
                <span asp-validation-for="SenhaJornaleiro" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label style="margin-right:41%"  class="font-weight-bold"  asp-for="StatusId" ></label>
                <select  class="w-50 centerText borderInput form-control" asp-for="StatusId" asp-items="ViewBag.StatusId"></select>
            </div>
            <div class="divBtn flex-row">
                
                    <input type="submit" value="Adicionar" class="btn btn-success btnSizeFontUpper" />
              
               
                    <a class="btn btn-info btnSizeFontUpper" asp-action="Index">Voltar</a>
               
            </div>
           
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
