@model OsirisPdvReal.Models.Cliente

@{
    ViewData["Title"] = "Create";
}

<div class="divBtn">
    <h4>Adicionar cliente</h4>
</div>
<hr />
@if (TempData["msgSucesso"] != null)
{
    <div class="alert alert-danger alert-dismissable mt-2" style="margin-left:10%;margin-right:10%">
        <strong>@TempData["msgSucesso"]</strong>
    </div>
}
<div class=" borderPurple divBtn centerCreateOrEdit">
    <div class="mt-3 mb-3">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NomeCliente" style="margin-right:35%" class="font-weight-bold"></label>
                <input asp-for="NomeCliente" class="w-50 centerText borderInput form-control" />
                <span asp-validation-for="NomeCliente" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EmailCliente" style="margin-right:35%" class="font-weight-bold"></label>
                <input asp-for="EmailCliente" class="w-50 centerText borderInput form-control" />
                <span asp-validation-for="EmailCliente" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TelefoneCliente" style="margin-right:41%" class="font-weight-bold"></label>
                <input asp-for="TelefoneCliente" class="w-50 centerText borderInput form-control" />
                <span asp-validation-for="TelefoneCliente" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StatusId" style="margin-right:41%" class="font-weight-bold"></label>
                <select asp-for="StatusId" class="w-50 centerText borderInput form-control" asp-items="ViewBag.StatusId"></select>
            </div>
            <div class="divBtn flex-row">

                <input type="submit" value="Adicionar" class="btn btn-success btnSizeFontUpper" />


                <a class="btn btn-info btnSizeFontUpper" asp-action="Index">Voltar</a>

            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
