@{
    Layout = "LayoutRanking";
}


<h5 class="divBtn fontTitles">RANKING DE CLIENTES</h5>

@if (TempData["msgSucesso"] != null)
{
    <div class="alert alert-danger alert-dismissable mt-2" style="margin-left:10%;margin-right:10%">
        <strong>@TempData["msgSucesso"]</strong>
    </div>
}
<div class="text-center mt-3">
    <a asp-action="GerarCSVRanking" class="btn btn-success ml-3">Download CSV</a>
</div>

<div class="d-flex mt-3">

    <form asp-action="RankingClientes" class="ml-2 d-flex">
        <label class="font-weight-bold" style="margin-top:5px;">Mês: </label>
        <select id="buscaMes" name="buscaMes" class="form-control borderInput ml-3">
            <option value="Todos">Todos</option>
            <option value="1">Janeiro</option>
            <option value="2">Fevereiro</option>
            <option value="3">Março</option>
            <option value="4">Abril</option>
            <option value="5">Maio</option>
            <option value="6">Junho</option>
            <option value="7">Julho</option>
            <option value="8">Agosto</option>
            <option value="9">Setembro</option>
            <option value="10">Outubro</option>
            <option value="11">Novembro</option>
            <option value="12">Dezembro</option>
        </select>
        <button class="btn btn-success" style="margin-left:1%;"><i class="fa fa-search text-white"></i></button>

    </form>
</div>
<div>
    <p class="divBtn mt-3 fontTitles" style="font-size:18px;">@ViewBag.filtro</p>

    <table class="table mt-4 table-striped">
        <thead class="tHeadPurple">
            <tr>
                <td>
                </td>
                <td class="text-white font-weight-bold">
                    NOME
                </td>
                <td class="text-white font-weight-bold">
                    EMAIL
                </td>
                <td class="text-white font-weight-bold">
                    TELEFONE
                </td>
                <td class="text-white font-weight-bold">
                    VALOR
                </td>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in ViewBag.ranking)
            {
                <tr>
                    <td>
                        @item.Posicao
                    </td>
                    <td>
                        @item.NomeCliente
                    </td>
                    <td>
                        @item.EmailCliente
                    </td>
                    <td>
                        @item.TelefoneCliente
                    </td>
                    <td style="color:forestgreen" class="font-weight-bold">
                        @item.ValorVenda
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>