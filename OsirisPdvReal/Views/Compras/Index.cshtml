@model IEnumerable<OsirisPdvReal.Models.Compras>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NomeItemCompra)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.QuantidadeCompra)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NomeItemCompra)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.QuantidadeCompra)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status.NomeStatus)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ComprasId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ComprasId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ComprasId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
